 <h1>All Products</h1>
    <ul>
        {{#each products}}
            <li>
                <img src="{{thumbnail}}" alt="{{title}} Thumbnail">
                <h2>{{title}}</h2>
                <p>Price: {{price}}</p>
                <p>Category: {{category}}</p>
                <form action="/carts/{{cartId}}/products/{{_id}}" method="POST">
                    <button type="submit">Add to Cart</button>
                </form>
                <a href="/products/{{_id}}">View Details</a>
            </li>
        {{/each}}
    </ul>